<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B74E9"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:gravity="center"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="100sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What would you do today?"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"/>


    <Button
        android:id="@+id/button_daily"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button1"
        android:textAllCaps="false"
        android:text="Daily Exercise" />



    <Button
        android:id="@+id/button_custom"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button1"
        android:textAllCaps="false"
        android:text="Custom Relaxation" />

    <Button
        android:id="@+id/button_music"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button1"
        android:textAllCaps="false"
        android:text="Music Relaxation" />


    <Button
        android:id="@+id/button_video"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button1"
        android:textAllCaps="false"
        android:text="Video Relaxation" />

</LinearLayout>